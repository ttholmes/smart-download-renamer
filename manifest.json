{
  "manifest_version": 3,
  "name": "Smart Download Renamer",
  "version": "1.0.0",
  "description": "Auto-rename downloads with intelligent naming patterns",
  
  "permissions": [
    "downloads",
    "storage",
    "management"
  ],
  
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html"
  },
  
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}
